<Application x:Class="Wpf_RunVision.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Wpf_RunVision.Converters"
             Startup="Application_Startup">

    <!--StartupUri="Views/MainWindow.xaml"-->

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- HandyControl 默认皮肤和主题 -->
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- ================== 覆盖颜色 ================== -->
            <!-- 注意：这些 Key 必须和 HandyControl 内部的一样，才能覆盖成功 -->
            <!--<Color x:Key="RegionColor">#FFFFFF</Color>-->
            <Color x:Key="BorderColor">#D8D8D8</Color>
            <!--<SolidColorBrush x:Key="RegionBrush" Color="#797979"/>
            <SolidColorBrush x:Key="BorderBrush" Color="#797979"/>
            <SolidColorBrush x:Key="BaseBorderBrush" Color="#797979"/>-->

            <!-- 定义转换器：根据 bool 值返回对应的连接状态文本 -->
            <converters:BoolToStatusTextConverter x:Key="BoolToStatusTextConverter"
                                              TrueText="连接成功"
                                              FalseText="连接失败"/>

            <!-- 定义背景颜色的样式（保持原样） -->
            <Style x:Key="ConnectionStatusStyle" TargetType="Border">
                <Setter Property="Background" Value="Gray"/>
                <!-- 默认背景颜色：灰色 -->
                <Style.Triggers>
                    <!-- 数据触发器：当连接状态为 True 时，背景设置为绿色 -->
                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                        <Setter Property="Background" Value="LightGreen"/>
                    </DataTrigger>
                    <!-- 数据触发器：当连接状态为 False 时，背景设置为红色 -->
                    <DataTrigger Binding="{Binding IsConnected}" Value="False">
                        <Setter Property="Background" Value="LightCoral"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>


        </ResourceDictionary>

    </Application.Resources>
</Application>
