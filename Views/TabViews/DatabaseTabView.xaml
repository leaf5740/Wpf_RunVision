<UserControl x:Class="Wpf_RunVision.Views.TabViews.DatabaseTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf_RunVision.Views.TabViews"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:vm="clr-namespace:Wpf_RunVision.ViewModels.TabViewModels"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">

    <UserControl.DataContext>
        <vm:DatabaseTabViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧占位 -->
        <GroupBox Grid.Column="0" Header="{Binding SelectedDatabase}" Style="{StaticResource GroupBoxTab}">
            <hc:AnimationPath Width="200" Height="200" Data="M512 0C229.12 0 0 229.12 0 512c0 226.56 146.56 417.92 350.08 485.76 25.6 4.48 35.2-10.88 35.2-24.32 0-12.16-0.64-52.48-0.64-95.36-128.64 23.68-161.92-31.36-172.16-60.16-5.76-14.72-30.72-60.16-52.48-72.32-17.92-9.6-43.52-33.28-0.64-33.92 40.32-0.64 69.12 37.12 78.72 52.48 46.08 77.44 119.68 55.68 149.12 42.24 4.48-33.28 17.92-55.68 32.64-68.48-113.92-12.8-232.96-56.96-232.96-252.8 0-55.68 19.84-101.76 52.48-137.6-5.12-12.8-23.04-65.28 5.12-135.68 0 0 42.88-13.44 140.8 52.48 40.96-11.52 84.48-17.28 128-17.28 43.52 0 87.04 5.76 128 17.28 97.92-66.56 140.8-52.48 140.8-52.48 28.16 70.4 10.24 122.88 5.12 135.68 32.64 35.84 52.48 81.28 52.48 137.6 0 196.48-119.68 240-233.6 252.8 18.56 16 34.56 46.72 34.56 94.72 0 68.48-0.64 123.52-0.64 140.8 0 13.44 9.6 29.44 35.2 24.32A512.832 512.832 0 0 0 1024 512c0-282.88-229.12-512-512-512z" 
                              Duration="0:0:6" 
                              Stretch="Uniform" StrokeThickness="6"
                              Stroke="{DynamicResource PrimaryBrush}"/>
        </GroupBox>

        <!-- 右侧数据库配置 -->
        <Grid Grid.Column="1" Margin="30,15,30,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 数据库类型 -->
            <ComboBox 
                Grid.Row="0"
                hc:InfoElement.Title="数据库类型:"
                ItemsSource="{Binding AvailableDatabases}"
                SelectedItem="{Binding SelectedDatabase, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource ComboBoxExtend}"
                Margin="0,0,0,10"/>

            <!-- IP -->
            <TextBox 
                Grid.Row="1"
                hc:InfoElement.Title="数据库 IP 地址:"
                Text="{Binding DatabaseModel.Ip, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource TextBoxExtend}"
                hc:InfoElement.Placeholder="请输入IP地址"
                Margin="0,0,0,10"/>

            <!-- Port -->
            <TextBox 
                Grid.Row="2"
                hc:InfoElement.Title="数据库端口号:"
                Text="{Binding DatabaseModel.Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource TextBoxExtend}"
                hc:InfoElement.Placeholder="请输入端口号"
                Margin="0,0,0,10"/>

            <!-- Password -->
            <TextBox 
                Grid.Row="3"
                hc:InfoElement.Title="数据库密码:"
                Text="{Binding DatabaseModel.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource TextBoxExtend}"
                hc:InfoElement.Placeholder="请输入密码"
                Margin="0,0,0,10"/>


            <TextBox 
                Grid.Row="4"
                hc:InfoElement.Title="库名:"
                Text="{Binding DatabaseModel.LibraryName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource TextBoxExtend}"
                hc:InfoElement.Placeholder="请输入库名（示例：255）"
                Margin="0,0,0,10"/>

            <TextBox 
                Grid.Row="5"
                hc:InfoElement.Title="Code表名:"
                Text="{Binding DatabaseModel.CodeTableName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource TextBoxExtend}"
                hc:InfoElement.Placeholder="请输入Code表名（示例：table_code）"
                Margin="0,0,0,10"/>

            <TextBox 
                Grid.Row="6"
                hc:InfoElement.Title="Data表名:"
                Text="{Binding DatabaseModel.DataTableName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource TextBoxExtend}"
                hc:InfoElement.Placeholder="请输入Data表名（示例：table_up）"
                Margin="0,0,0,10"/>
            
            <!-- 分隔线 -->
            <hc:Divider 
                Grid.Row="7"
                LineStrokeThickness="1"
                Orientation="Horizontal"
                Margin="0,0,0,10"/>

            <!-- 连接测试按钮 -->
            <Button 
                Grid.Row="8"
                Height="40"
                Content="数据库连接测试"
                Command="{Binding ConnectCommand}"
                HorizontalAlignment="Stretch"
                Margin="0,0,0,10"/>

            <!-- 保存配置按钮 -->
            <Button 
                Height="40"
                Grid.Row="9"
                Content="保存配置"
                Command="{Binding SaveConfigCommand}"
                HorizontalAlignment="Stretch"/>
        </Grid>
    </Grid>
</UserControl>
